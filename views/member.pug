extends layout 

block content
    if !user.ismember
        form(action="" method='POST')
            label(for="code") Club code: 
            input(type="text" placeholder="Code (Code = TOP)" id="code" name="code")
            button Submit
            if error
                ul
                    li
                        p.error #{error}
    else
        h2.prompt You are already a member.